{% extends 'base.html.twig' %}

{% block title %}Achat index{% endblock %}

{% block body %}
    <h1>Achat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codefacture</th>
                <th>Datefacture</th>
                <th>Dateaujo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td>{{ achat.id }}</td>
                <td>{{ achat.codefacture }}</td>
                <td>{{ achat.datefacture ? achat.datefacture|date('Y-m-d') : '' }}</td>
                <td>{{ achat.dateaujo ? achat.dateaujo|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('achat_show', {'id': achat.id}) }}">show</a>
                    <a href="{{ path('achat_edit', {'id': achat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
