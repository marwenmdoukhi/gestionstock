{% extends 'base.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}
    <h1>Vente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateFacture</th>
                <th>MontantFact</th>
                <th>Qte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.id }}</td>
                <td>{{ vente.montantFact }}</td>
                <td>{{ vente.qte }}</td>
                <td>
                    <a href="{{ path('vente_show', {'id': vente.id}) }}">show</a>
                    <a href="{{ path('vente_edit', {'id': vente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
