{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.Prenom }}</td>
            </tr>
            <tr>
                <th>RaisonSocial</th>
                <td>{{ client.raisonSocial }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ client.datecreation ? client.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MatriculeFiscal</th>
                <td>{{ client.matriculeFiscal }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.tel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
