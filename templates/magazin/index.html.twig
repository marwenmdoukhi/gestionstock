    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magazin in magazins %}
            <tr>
                <td>{{ magazin.id }}</td>
                <td>{{ magazin.nom }}</td>
                <td>
